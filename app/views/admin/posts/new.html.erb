<br>
<div class="row mx-auto">
	<div class="col-md-7 mx-auto">
		<%= form_for [:admin, @post] do |f| %>
			<div class="form-group">
				<label for="titlelbl">Post Title</label>
				<%= f.text_field :title, class: "form-control", id: "titlelbl" %>
			</div>
			<div class="form-group">
				<label for="bodylbl">Content</label>
				<%= f.text_area :body, class: "form-control", id: "bodylbl" %>
			</div>
			<br>
			<div class="form-group">
				<%= f.file_field :image, class: "form-control"%>
			</div>
			<br>
			<%= f.submit "Publish", class: "btn btn-primary" %>
		<% end %>
	</div>
</div>